<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="Library.Resources.Styles.ColorsDark">
    
    <!-- Основные цвета -->
    <Color x:Key="PrimaryColor">#8B6FE8</Color>
    <Color x:Key="SecondaryColor">#4A3A6E</Color>
    <Color x:Key="TertiaryColor">#6B50D4</Color>
    
    <!-- Фоновые цвета -->
    <Color x:Key="PageBackgroundColor">#121212</Color>
    <Color x:Key="CardBackgroundColor">#1E1E1E</Color>
    
    <!-- Текстовые цвета -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#B0B0B0</Color>
    
    <!-- Статусные цвета -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="WarningColor">#FFC107</Color>
    <Color x:Key="ErrorColor">#F44336</Color>
    
    <!-- Дополнительные цвета для совместимости -->
    <Color x:Key="Primary">#8B6FE8</Color>
    <Color x:Key="Secondary">#4A3A6E</Color>
    <Color x:Key="Tertiary">#6B50D4</Color>
    <Color x:Key="AccentColor">#424242</Color>
    
    <!-- Оттенки серого для темной темы -->
    <Color x:Key="Gray100">#2C2C2C</Color>
    <Color x:Key="Gray200">#383838</Color>
    <Color x:Key="Gray300">#424242</Color>
    <Color x:Key="Gray400">#5E5E5E</Color>
    <Color x:Key="Gray500">#757575</Color>
    <Color x:Key="Gray600">#BDBDBD</Color>
    <Color x:Key="Gray900">#E0E0E0</Color>
    
</ResourceDictionary>

